@namespace SWLOR.Admin.Shared.Components
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-map-marker-alt"></i> Current Location</h5>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <td><strong>Area:</strong></td>
                        <td>@Player.LocationAreaResref</td>
                    </tr>
                    <tr>
                        <td><strong>Coordinates:</strong></td>
                        <td>(@Player.LocationX, @Player.LocationY, @Player.LocationZ)</td>
                    </tr>
                    <tr>
                        <td><strong>Orientation:</strong></td>
                        <td>@Player.LocationOrientation°</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-home"></i> Respawn Location</h5>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <td><strong>Area:</strong></td>
                        <td>@Player.RespawnAreaResref</td>
                    </tr>
                    <tr>
                        <td><strong>Coordinates:</strong></td>
                        <td>(@Player.RespawnLocationX, @Player.RespawnLocationY, @Player.RespawnLocationZ)</td>
                    </tr>
                    <tr>
                        <td><strong>Orientation:</strong></td>
                        <td>@Player.RespawnLocationOrientation°</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-ship"></i> Ship Information</h5>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <td><strong>Active Ship ID:</strong></td>
                        <td>@Player.ActiveShipId</td>
                    </tr>
                    <tr>
                        <td><strong>Citizen Property ID:</strong></td>
                        <td>@Player.CitizenPropertyId</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-taxi"></i> Taxi Destinations</h5>
            </div>
            <div class="card-body">
                <p><strong>Total Taxi Destinations:</strong> @Player.TaxiDestinations.Count</p>
                @if (Player.TaxiDestinations.Count > 0)
                {
                    <ul>
                        @foreach (var taxi in Player.TaxiDestinations.Take(5))
                        {
                            <li>Level @taxi.Key: @taxi.Value.Count destinations</li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Player Player { get; set; } = null!;
} 